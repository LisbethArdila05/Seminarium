// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user{
  id Int @id @default(autoincrement())
  mail  String @unique
  user  String @unique
  password String 
} 

model planta{
  id Int @id @default(autoincrement())
  nombre String 
  cantidad Int
  precio Int
  tamano Int
  ventas ventas[]
  stock stock[]
  
}

model ventas{
  id Int @id @default(autoincrement())
  cantidad Int
  precio Int
  tamanoPlanta Int
  fechaVenta DateTime
  planta planta @relation(fields: [plantaId], references: [id])
  plantaId Int
}

model stock {
  id Int @id @default(autoincrement())
  cantidad Int
  planta planta @relation(fields: [plantaId], references: [id])
  plantaId Int
}


